from __future__ import print_function, unicode_literals

import os
import configparser
import logging
import asyncore
import atexit

# This is https://github.com/systemd/python-systemd a.k.a.
# https://pypi.org/project/systemd-python/
# (not https://pypi.org/project/systemd/)
from systemd.daemon import notify

from journalmtpd.socketactivation import get_activation_socket
from journalmtpd.mailreceiver import MailReceiver
from journalmtpd.journalgateway import JournalGateway

def setup_logging(level=None):
    conf = {}
    if level:
        if level == 'DEBUG':
            conf['level'] = logging.DEBUG
        elif level == 'INFO':
            conf['level'] = logging.INFO
        elif level == 'WARNING':
            conf['level'] = logging.WARNING
    logging.basicConfig(**conf)

def journalmtpd():
    conf = configparser.ConfigParser()
    conf.read(os.environ["JOURNALMTPD_INI"])

    setup_logging(**conf["logging"])

    logger = logging.getLogger("journalmtpd")

    sock = get_activation_socket()

    mr = MailReceiver(conf["filter"])
    app = JournalGateway(mr, sock)

    logger.info("accepting connections")
    notify("READY=1")
    notify("STATUS=accepting messages")
    asyncore.loop()

if __name__ == '__main__':
    journalmtpd()

